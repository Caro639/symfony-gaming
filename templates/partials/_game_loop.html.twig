{% if title is defined %}
    <h2 class="mt-5">{{ title }}</h2>
{% endif %}

<div class="row">
    {% for game in games %}
        <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
            <div class="container-img">
                <a href="{{ path('app_show_game', { slug: game.slug }) }}">
                {# <img src="{{ asset('../image/thumbnailCover/'~ game.thumbnailCover) }}" #}
                <img src="{{ game.thumbnailCover }}"
                     alt="{{ game.name }}">
                </a>
            </div>
            <div class="d-flex justify-content-between">

                <h3>
                    <a href="{{ path('app_show_game', { slug: game.slug }) }}" class="text-decoration-none text-light">
                    {{ game.name }}
                    </a>
                </h3>
                <h3>
                    {{ game.price }}â‚¬
                </h3>
            </div>
        </div>
    {% endfor %}
</div>

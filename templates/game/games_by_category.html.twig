
{% extends 'base.html.twig' %}

{% block title %}Jeux de la catégorie {{ category.name }}{% endblock %}

{% block body %}

    <div class="container">
        <h2 class="text-center mt-4">Jeux de la catégorie {{ category.name }}</h2>

        <div class="mb-4">
            <a href="{{ path('app_home') }}" class="default-link">Accueil</a>
        </div>

        <div class="row">

            {% for game in gamesByCategory %}
                <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
                    <div class="container-img">
                        <a href="{{ path('app_show_game', { slug: game.slug }) }}">
                        <img src="{{ game.thumbnailCover }}"
                            alt="{{ game.name }}">
                        </a>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_show_game', { slug: game.slug }) }}"
                        class="text-decoration-none text-light">
                            {{ game.name }}
                        </a>
                        <h3>
                            {{ game.price }}€
                        </h3>
                    </div>
                </div>
            {% endfor %}
      </div>
    </div>
{% endblock %}
